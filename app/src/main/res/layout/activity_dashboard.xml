<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1976D2"
        android:padding="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ… Sport Tools Rental"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UKM OLAHRAGA POLITEKNIK NEGERI LAMPUNG"
            android:textSize="11sp"
            android:textColor="#BBDEFB"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang!"
            android:textSize="16sp"
            android:textColor="#BBDEFB"/>

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Daftar Alat Olahraga"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1565C0"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih alat yang ingin Anda pinjam:"
                android:textSize="14sp"
                android:textColor="#616161"/>

        </LinearLayout>

        <!-- ListView Alat -->
        <ListView
            android:id="@+id/lvTools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:elevation="2dp"
            android:padding="8dp"
            android:divider="#E0E0E0"
            android:dividerHeight="1dp"
            android:layout_marginBottom="16dp"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnRental"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="PINJAM ALAT"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"/>

            <Button
                android:id="@+id/btnViewRental"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="LIHAT PEMINJAMAN"
                android:textColor="#1976D2"
                android:textStyle="bold"
                android:background="@drawable/button_outline_bg"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>